<%= form_with(model: car, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :nome, class: "form-label" %>
    <%= form.text_field :nome, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :modelo, class: "form-label" %>
    <%= form.text_field :modelo, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :ano, class: "form-label" %>
    <%= form.number_field :ano, class: "form-control", min: 1900, max: Date.today.year, required: true %>
  </div>

  <%= form.submit class: "btn btn-success" %>
<% end %>
