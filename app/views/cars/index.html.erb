<div class="container mt-5">
  <h1>Lista de Carros</h1>
  <div class="mb-3">
    <%= link_to 'Novo Carro', new_car_path, class: "btn btn-primary" %>
  </div>
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Nome</th>
        <th>Modelo</th>
        <th>Ano</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><%= car.nome %></td>
          <td><%= car.modelo %></td>
          <td><%= car.ano %></td>
          <td>
            <%= link_to 'Editar', edit_car_path(car), class: "btn btn-warning btn-sm" %>
            <%= link_to 'Excluir', car, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger btn-sm" %>
            <%= link_to 'Ver', car, class: "btn btn-info btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
