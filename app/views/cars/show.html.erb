<div class="container mt-5">
  <h1><%= @car.nome %> - <%= @car.modelo %> (<%= @car.ano %>)</h1>
  <div class="mt-3">
    <%= link_to 'Editar', edit_car_path(@car), class: "btn btn-warning" %>
    <%= button_to 'Excluir', car_path(@car), method: :delete,
                    data: { confirm: 'Tem certeza que deseja excluir este carro?' },
                    class: "btn btn-danger btn-sm",
                    form: { style: 'display: inline' } %>
    <%= link_to 'Voltar', cars_path, class: "btn btn-secondary" %>
  </div>
</div>
