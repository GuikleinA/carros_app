<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0"><%= @car.nome %> - <%= @car.modelo %> (<%= @car.ano %>)</h4>
        </div>
        <div class="card-body">
          <p><strong>Nome:</strong> <%= @car.nome %></p>
          <p><strong>Modelo:</strong> <%= @car.modelo %></p>
          <p><strong>Ano:</strong> <%= @car.ano %></p>
          <p><strong>Status:</strong> <%= @car.located? ? "Locado" : "Disponível" %></p>
          <% if @car.located? && @car.located_at.present? %>
            <p><strong>Data de Locação:</strong> <%= l(@car.located_at, format: :long) %></p>
            <p><strong>Dias locado:</strong> <%= (Date.current - @car.located_at.to_date).to_i %> dias</p>
          <% end %>
        </div>
        <div class="card-footer d-flex justify-content-between">
          <div>
            <%= link_to 'Editar', edit_car_path(@car), class: "btn btn-warning" %>
            <%= button_to 'Excluir', car_path(@car),
                  method: :delete,
                  data: { confirm: 'Tem certeza que deseja excluir este carro?' },
                  class: "btn btn-danger",
                  form: { style: 'display: inline' } %>
          </div>
          <%= link_to 'Voltar', cars_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
